{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.pageFolders": [
    {
      "title": "profiles",
      "path": "[[workspace]]/src/content/profiles",
      "contentTypes": [
        "profile"
      ]
    },
    {
      "title": "projects",
      "path": "[[workspace]]/src/content/projects",
      "contentTypes": [
        "project"
      ]
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "profile",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "title": "Name",
          "name": "name",
          "type": "string",
          "description": "Your full name or preferred display name.",
          "required": true
        },
        {
          "title": "Avatar",
          "name": "avatar",
          "type": "image",
          "description": "Profile image or avatar.",
          "required": true
        },
        {
          "title": "Hero",
          "name": "hero",
          "type": "image",
          "description": "A hero image that is used for SEO.",
          "required": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string",
          "description": "A brief summary about you.",
          "required": true
        },
        {
          "title": "Tools",
          "name": "tools",
          "type": "list",
          "description": "List of skills, technologies, and tools you use.",
          "required": true
        },
        {
          "title": "Socials",
          "name": "socials",
          "type": "list",
          "description": "Links to your social profiles.",
          "required": false
        },
        {
          "title": "Domain Url",
          "name": "domain",
          "type": "string",
          "description": "The url to your domain",
          "required": true
        }
      ]
    },
    {
      "name": "project",
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "title": "Name",
          "name": "name",
          "type": "string",
          "description": "Project name.",
          "required": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string",
          "description": "Brief project overview.",
          "required": true
        },
        {
          "title": "Category",
          "name": "category",
          "type": "choice",
          "description": "Project category.",
          "choices": [
            "software",
            "audio",
            "other"
          ],
          "required": true
        },
        {
          "title": "Image",
          "name": "image",
          "description": "Screenshot or visual of the project.",
          "type": "image",
          "required": true
        },
        {
          "title": "Tools",
          "name": "tools",
          "description": "Technologies and tools used.",
          "type": "list",
          "required": true
        },
        {
          "title": "Links",
          "name": "links",
          "type": "list",
          "description": "Relevant URLs.",
          "required": false
        }
      ]
    }
  ]
}